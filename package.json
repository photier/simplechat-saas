{
  "name": "simplechat-saas",
  "version": "1.0.0",
  "description": "Simple Chat Bot SaaS Platform - Monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "backend",
    "stats"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:dashboard": "turbo run build --filter=@simple-chat/dashboard",
    "build:widget": "turbo run build --filter=@simple-chat/widget",
    "build:widget-premium": "turbo run build --filter=@simple-chat/widget-premium",
    "build:backend": "turbo run build --filter=backend",
    "build:stats": "turbo run build --filter=stats-dashboard",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "turbo": "^2.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/photier/simplechat-saas.git"
  },
  "author": "Photier",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.9.2",
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1"
  }
}
